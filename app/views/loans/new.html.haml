.flex.flex-col.items-center.justify-center.bg-gray-900.p-6.rounded-xl{ class: 'w-1/3' }
  = form_with url: loans_path, method: 'POST', html: { class: 'flex flex-col items-center w-full'} do |form|
    .font-bold.text-2xl.uppercase= 'Calculate loan profit'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :name, 'Name:'
      = form.text_field :name, required: true, autocomplete: 'off', class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :address, 'Address:'
      = form.text_field :address, required: true, autocomplete: 'off', class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :email, 'Email:'
      = form.email_field :email, required: true, autocomplete: 'off', class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :phone, 'Cellphone:'
      = form.text_field :phone, required: true, autocomplete: 'off', class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :loan_term, 'Loan Term:'
      = form.number_field :loan_term, required: true, autocomplete: 'off', minimum: 0, step: 1, class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :purchase_price, 'Purchase Price:'
      = form.number_field :purchase_price, required: true, autocomplete: 'off', minimum: 0, step: 0.01, class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :repair_price, 'Repair Budget:'
      = form.number_field :repair_price, required: true, autocomplete: 'off', minimum: 0, step: 0.01, class: 'p-2 rounded-2xl border-0 bg-purple-800'
    .w-full.flex.items-center.justify-between.h-16
      .font-bold= form.label :arv, 'ARV:'
      = form.number_field :arv, required: true, autocomplete: 'off', minimum: 0, step: 0.01, class: 'p-2 rounded-2xl border-0 bg-purple-800'
    = form.submit 'Calculate', required: true, autocomplete: 'off', class: 'p-2 text-2xl rounded-2xl border-0 bg-purple-800 hover:bg-purple-700'
